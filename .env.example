# ===========================================
# Flightshark Backend Environment Configuration
# ===========================================
# Copy this file to .env and update values for your environment
# NEVER commit .env to version control!

# =====================
# General Settings
# =====================
DEBUG=true
ENVIRONMENT=development

# =====================
# Security
# =====================
# Generate with: openssl rand -hex 32
SECRET_KEY=dev-secret-key-change-in-production
DJANGO_SECRET_KEY=django-dev-secret-key-change-in-production

# =====================
# Database - PostgreSQL
# =====================
POSTGRES_USER=flightshark
POSTGRES_PASSWORD=flightshark_dev
POSTGRES_DB=flightshark
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =====================
# Cache - Redis
# =====================
REDIS_HOST=redis
REDIS_PORT=6379

# =====================
# Database - MongoDB
# =====================
MONGODB_HOST=mongo
MONGODB_PORT=27017
MONGODB_DATABASE=flightshark

# =====================
# Message Queue - RabbitMQ
# =====================
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# =====================
# CORS Settings
# =====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# =====================
# JWT Authentication
# =====================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7

# =====================
# Flight APIs (Optional)
# =====================
AMADEUS_API_KEY=
AMADEUS_API_SECRET=
SKYSCANNER_API_KEY=
KIWI_API_KEY=

# =====================
# Social Media APIs (Optional)
# =====================
TWITTER_BEARER_TOKEN=
TIKTOK_API_KEY=

# =====================
# Notification Services (Optional)
# =====================
SENDGRID_API_KEY=
FROM_EMAIL=noreply@flightshark.com
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =====================
# Monitoring (Optional)
# =====================
SENTRY_DSN=

# =====================
# Rate Limiting
# =====================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
